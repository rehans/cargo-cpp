cmake_minimum_required(VERSION @CMAKE_MINIMUM_VERSION@)

project(@PROJECT_NAME@)

add_subdirectory(external)

# library
add_library(@TARGET_NAME@ STATIC
    include/@DOMAIN_NAME@/@TARGET_NAME@/@TARGET_NAME@.h
    source/@TARGET_NAME@.cpp
)

target_include_directories(@TARGET_NAME@
    PUBLIC
        include
    PRIVATE
        source
)

target_compile_features(@TARGET_NAME@ 
    PRIVATE 
        cxx_std_17
)

# executable
add_executable(@TARGET_NAME@-app
    source/main.cpp
)

target_link_libraries(@TARGET_NAME@-app
    PRIVATE
        @TARGET_NAME@
)

target_compile_features(@TARGET_NAME@-app
    PRIVATE 
        cxx_std_17
)